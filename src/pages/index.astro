---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

function formatDate(date: Date) {
  return new Date(date).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<Layout title="Monadic DNA" description="Latest insights on privacy-preserving genomics, cryptography, and secure computation">
  <section class="py-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="font-unbounded text-4xl md:text-5xl font-bold mb-12">
        Monadic DNA
      </h1>

      <div class="space-y-12">
        {posts.map((post) => (
          <article class="border-b border-gray-200 pb-12 last:border-b-0">
            <a href={`/blog/${post.slug}`} class="group">
              <h2 class="font-unbounded text-2xl md:text-3xl font-bold mb-3 text-gray-900 group-hover:text-purple-600 transition-colors">
                {post.data.title}
              </h2>
            </a>
            <div class="flex items-center gap-4 text-sm text-gray-600 mb-4">
              <time datetime={post.data.pubDate.toISOString()}>
                {formatDate(post.data.pubDate)}
              </time>
              {post.data.tags.length > 0 && (
                <>
                  <span>•</span>
                  <div class="flex gap-2">
                    {post.data.tags.map((tag) => (
                      <span>{tag}</span>
                    ))}
                  </div>
                </>
              )}
            </div>
            <p class="text-gray-700 mb-4 leading-relaxed">
              {post.data.description}
            </p>
            <a
              href={`/blog/${post.slug}`}
              class="inline-flex items-center text-purple-600 font-semibold hover:text-purple-700 transition-colors"
            >
              Read more →
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>
</Layout>
